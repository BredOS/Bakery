<?xml version='1.0' encoding='UTF-8'?>
<!-- Created with Cambalache 0.17.0 -->
<interface>
  <!-- interface-name summary_screen.ui -->
  <requires lib="gtk" version="4.0"/>
  <requires lib="libadwaita" version="1.3"/>
  <template class="summary_screen" parent="AdwBin">
    <child>
      <object class="AdwStatusPage">
        <property name="child">
          <object class="GtkBox">
            <property name="orientation">vertical</property>
            <child>
              <object class="AdwPreferencesPage">
                <child>
                  <object class="AdwPreferencesGroup">
                    <property name="title">Locale</property>
                    <child>
                      <object class="AdwActionRow">
                        <property name="title">Locale</property>
                        <child>
                          <object class="GtkLabel" id="locale_preview"/>
                        </child>
                      </object>
                    </child>
                  </object>
                </child>
                <child>
                  <object class="AdwPreferencesGroup">
                    <property name="title">Keyboard</property>
                    <property name="visible">true</property>
                    <child>
                      <object class="AdwActionRow">
                        <property name="title">Language</property>
                        <child>
                          <object class="GtkLabel" id="kb_lang"/>
                        </child>
                      </object>
                    </child>
                    <child>
                      <object class="AdwActionRow">
                        <property name="title">Layout</property>
                        <child>
                          <object class="GtkLabel" id="kb_variant"/>
                        </child>
                      </object>
                    </child>
                  </object>
                </child>
                <child>
                  <object class="AdwPreferencesGroup">
                    <property name="title">Timezone</property>
                    <child>
                      <object class="AdwActionRow">
                        <property name="title">Timezone</property>
                        <child>
                          <object class="GtkLabel" id="tz_preview"/>
                        </child>
                      </object>
                    </child>
                  </object>
                </child>
                <child>
                  <object class="AdwPreferencesGroup">
                    <property name="title">User Info</property>
                    <child>
                      <object class="AdwActionRow">
                        <property name="title">Full name</property>
                        <child>
                          <object class="GtkLabel" id="name_preview"/>
                        </child>
                      </object>
                    </child>
                    <child>
                      <object class="AdwActionRow">
                        <property name="title">Username</property>
                        <child>
                          <object class="GtkLabel" id="username_preview"/>
                        </child>
                      </object>
                    </child>
                    <child>
                      <object class="AdwActionRow">
                        <property name="title">Hostname</property>
                        <child>
                          <object class="GtkLabel" id="hostname_preview"/>
                        </child>
                      </object>
                    </child>
                    <child>
                      <object class="AdwActionRow">
                        <child>
                          <object class="GtkLabel"/>
                        </child>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </property>
        <property name="description">Your selections have been listed below, please confirm and continue with instillation</property>
        <property name="title">Please confirm your choices</property>
      </object>
    </child>
  </template>
  <object class="AdwMessageDialog" id="install_confirm">
    <property name="body">Are you sure you want to start the installation?</property>
    <property name="default-response">confirm</property>
    <property name="heading">Start Installation</property>
    <!-- Custom fragments -->
    <responses>
      <response id="cancel" translatable="yes">_Cancel</response>
      <response id="yes" translatable="yes" appearance="suggested">Yes</response>
    </responses>
  </object>
</interface>
